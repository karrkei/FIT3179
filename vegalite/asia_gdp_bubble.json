{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "width": 500,
  "height": 350,
  "title": {"text": "Graph of GDP against Happiness Score in South East Asian Countries, 2015-2019", "fontSize": 20},
  "description": "Google's stock price over time.",
  "data": {"url": "https://karrkei.github.io/FIT3179/data/se_asia.csv"},
  "selection": {
    "year_selection": {
      "type": "single",
      "fields": ["Year"],
      "bind": {
        "input": "select",
        "options": [null, "2015", "2016", "2017", "2018", "2019"],
        "labels": ["Show All", "2015", "2016", "2017", "2018", "2019"],
        "name": "Year Selection: "
      }
    }
  },
  "transform": [
    {
      "filter": {
        "field": "Year",
        "oneOf": ["2015", "2016", "2017", "2018", "2019"]
      }
    }
  ],
  "mark": {"type": "circle", "size": 45},
  "encoding": {
    "x": {"field": "GDP", "type": "quantitative", "title": "GDP"},
    "y": {"field": "Score", "type": "quantitative"},
    "color": {
      "field": "Country",
      "legend": {
        "titleFontSize": 12,
        "symbolType": "circle",
        "symbolSize": 200,
        "labelFontSize": 11,
        "symbolStrokeWidth": 3
      }
    },
    "opacity": {
      "condition": {"selection": "year_selection", "value": 0.6},
      "value": 0
    },
    "tooltip": [
      {"field": "Country", "type": "ordinal", "title": "Country"},
      {
        "field": "Score",
        "type": "quantitative",
        "title": "Happiness Score",
        "format": ".3f"
      },
      {"field": "GDP", "type": "quantitative", "title": "GDP", "format": ".3f"}
    ]
  },
  "config": {}
}